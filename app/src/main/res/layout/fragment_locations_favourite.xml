<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_city_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/city_name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@id/btn_go"
        app:layout_constraintEnd_toStartOf="@id/btn_go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_go" />

    <Button
        android:id="@+id/btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favourite_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/btn_all_cities"
        app:layout_constraintTop_toBottomOf="@id/btn_go"
        tools:listitem="@layout/item_location_favourite" />

    <Button
        android:id="@+id/btn_all_cities"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/all_cities"
        app:drawableLeftCompat="@drawable/ic_globe"
        app:drawableTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_get_location"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_get_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/my_location"
        app:drawableRightCompat="@drawable/ic_my_location"
        app:drawableTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/btn_all_cities"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_all_cities" />

</androidx.constraintlayout.widget.ConstraintLayout>